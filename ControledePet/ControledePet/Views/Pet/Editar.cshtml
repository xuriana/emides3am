@model PetModel
@{
    ViewData["Title"] = "Editar Pets";
}

<div class="text-center">
    
    <h1 class="display-4">Editar Pets</h1>
</div>
<form asp-controller="Pet" asp-action="Alterar" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Insira o Nome">
    </div>
    <div class="form-group">
        <label for="raca">Raça</label>
        <input type="text" asp-for="Raca" class="form-control" placeholder="Insira a Raça">
    </div>
    <div class="form-group">
        <label for="genero">Gênero</label>
        <select asp-for="Genero" class="form-select">
            <option selected>Insira o gênero do pet</option>
            <option value="Masculino">Masculino</option>
            <option value="Feminino">Feminino</option>
        </select>
    </div>
    <br />
    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary">Atualizar</button>
        <a role="button" class="btn btn-secondary" asp-controller="Pet" asp-action="Index">Voltar</a>
    </div> 
</form>