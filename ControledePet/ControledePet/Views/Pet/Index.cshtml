@model List<PetModel>
@{
    ViewData["Title"] = "Cadastro de Pets";
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a role="button" class="btn btn-primary" asp-controller="Pet" asp-action="Criar">Adicionar Pet</a>
    </div>

    <h1 class="display-4">Lista de Pets</h1>

    <table class="table" id="tblpet">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Raça</th>
                <th scope="col">Gênero</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (PetModel pet in Model)
                {
                    <tr>
                        <th scope="row">@pet.Id</th>
                        <td>@pet.Nome</td>
                        <td>@pet.Raca</td>
                        <td>@pet.Genero</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-controller="Pet" asp-route-id="@pet.Id" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-controller="Pet" asp-route-id="@pet.Id" asp-action="ApagarConfirmar">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
